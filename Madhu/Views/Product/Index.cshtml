                    <div class="card">
                        <!-- Card header -->
                        <div class="card-header border-0">
                            <h3 class="mb-0">Shopping Cart</h3>
                        </div>
                        <!-- Light table -->
                        <div class="table-responsive">
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Image</th>
                                        <th>Price</th>
                                        
                                    </tr>

                                </thead>
                                @foreach (var product in Model) //loop through the products
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => product.Name)
                                        </td>
                                        <td>
                                            <img src="~/assets/img/@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto;" asp-append-version="true" />

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => product.Price)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Add To Cart", "AddToCart", "Cart", new { sku = product.Sku }, new { @class = "btn btn-info" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Buy", "Buy", "Cart", new { sku = product.Sku }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }

                            </table>
